<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.e_stolik.ProfilActivity">


    <EditText
        android:id="@+id/et_imie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="text"
        android:hint="ImiÄ™*"/>

    <EditText
        android:id="@+id/et_nazwisko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_imie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nazwisko*"/>

    <EditText
        android:id="@+id/et_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nazwisko"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="text"
        android:enabled="false"
        android:hint="Login*"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:layout_below="@+id/et_login"
        android:inputType="textEmailAddress"
        android:hint="Email*"/>

    <EditText
        android:id="@+id/et_nrTelefonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:layout_below="@+id/et_email"
        android:inputType="phone"
        android:hint="Numer Telefonu*"/>

    <Button
        android:id="@+id/btn_confirme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:text="Zapisz zmiany"
        android:layout_below="@+id/et_nrTelefonu"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>






</RelativeLayout>
